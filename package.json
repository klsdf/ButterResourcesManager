{
  "name": "butter-manager",
  "version": "0.5.7",
  "description": "A Vue + Electron desktop application",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": [
    "vue",
    "electron",
    "desktop",
    "app"
  ],
  "author": "Yan",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "vue": "^3.3.8"
  },
  "build": {
    "appId": "com.example.butter-resources-manager",
    "productName": "ButterResourcesManager",
    "directories": {
      "output": "dist-electron/v${version}"
    },
    "artifactName": "${productName} ${version}.${ext}",
    "files": [
      "dist/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/butter-logo.svg",
      "public/butter-icon.ico",
      "public/butter-icon.png",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "klsdf",
      "repo": "ButterResourcesManager"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}_Setup_${version}.${ext}"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/butter-logo.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/butter-icon.ico"
    },
    "portable": {
      "artifactName": "${productName}_Portable_${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/butter-logo.png"
    }
  }
}
