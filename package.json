{
  "name": "butter-manager",
  "version": "0.3.0",
  "description": "A Vue + Electron desktop application",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": [
    "vue",
    "electron",
    "desktop",
    "app"
  ],
  "author": "Yan",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "vue": "^3.3.8"
  },
  "build": {
    "appId": "com.example.butter-manager-vue",
    "productName": "Butter Manager Vue",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/butter-logo.svg",
      "public/butter-logo.ico",
      "public/butter-logo.png",
      "node_modules/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/butter-logo.png"
    },
    "win": {
      "target": "portable",
      "icon": "public/butter-logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/butter-logo.png"
    }
  }
}
